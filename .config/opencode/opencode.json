{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "ask",
    "read": {
      "*": "ask",
      "~/Repo/*": "allow"
    },
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "ls *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "find *": "allow",
      "find * -exec *": "deny",
      "git status *": "allow",
      "git log *": "allow",
      "git diff *": "allow"
    },
    "external_directory": {
      "*": "ask",
      "~/Repo/*": "allow"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "skill": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "rovo_fetch": "allow",
    "rovo_get*": "allow",
    "rovo_search*": "allow",
    "kubernetes_pods_list_*": "allow",
    "kubernetes_pods_get": "allow",
    "kubernetes_pods_log": "allow",
    "kubernetes_resources_list": "allow",
    "kubernetes_resources_get": "allow",
    "kubernetes_namespaces_list": "allow",
    "kubernetes_configuration_contexts_list": "allow"
  },
  "mcp": {
    "kubernetes": {
      "type": "local",
      "command": [
        "uvx",
        "kubernetes-mcp-server@latest",
        "--read-only"
      ],
      "enabled": true,
      "environment": {}
    },
    "excalidraw": {
      "type": "remote",
      "url": "https://mcp.excalidraw.com",
      "enabled": true
    },
    "rovo": {
      "type": "local",
      "command": [
        "npx",
        "--registry",
        "https://registry.npmjs.org",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/mcp"
      ],
      "enabled": true,
      "environment": {}
    },
    "aws-core": {
      "type": "local",
      "command": [
        "uvx",
        "awslabs.core-mcp-server@latest",
        "--no-banner"
      ],
      "enabled": true,
      "environment": {}
    },
    "aws-knowledge": {
      "type": "local",
      "command": [
        "uvx",
        "fastmcp",
        "run",
        "--no-banner",
        "https://knowledge-mcp.global.api.aws"
      ],
      "enabled": true,
      "environment": {}
    }
  }
}
